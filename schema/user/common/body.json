{
  "id": "userCommonBody",
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "common#/definitions/name"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "$ref": "userCommonPassword"
    },
    "master": {
      "$ref": "userCommonMaster"
    },
    "state": {
      "type": "string",
      "enum": [
        "unverified",
        "active"
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "email",
    "password",
    "master",
    "state"
  ]
}
