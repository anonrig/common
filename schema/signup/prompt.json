{
  "id": "signupPrompt",
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "Full name",
      "errorMessage": "Please enter your full name",
      "$ref": "common#/definitions/name"
    },
    "email": {
      "description": "Email Address",
      "errorMessage": "Please enter a valid email address",
      "$ref": "common#/definitions/email"
    },
    "passphrase": {
      "description": "Passphrase",
      "errorMessage": "Passphrase must be minimum 8 chars",
      "$ref": "common#/definitions/passphrase"
    },
    "confirm_passphrase": {
      "description": "Confirm passphrase",
      "errorMessage": "Passphrases must match",
      "$ref": "common#/definitions/passphrase"
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "email",
    "passphrase",
    "confirm_passphrase"
  ]
}
